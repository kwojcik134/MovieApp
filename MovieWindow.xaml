<Window x:Class="MovieAppWPF.MovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieAppWPF"
        mc:Ignorable="d"
        Title="MovieWindow" Height="450" Width="810">
    <Grid>
        <ListBox x:Name="ReviewListBox"  Margin="30,100,30,30"/>
        <TextBox x:Name="MovieInfo" HorizontalAlignment="Left" Height="40" Margin="60,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="RatingAverage" HorizontalAlignment="Left" Height="40" Margin="240,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="40"/>
       

    </Grid>
</Window>
