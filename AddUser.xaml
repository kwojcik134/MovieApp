<Window x:Class="MovieAppWPF.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieAppWPF"
        mc:Ignorable="d"
        Title="AddUser" Height="350" Width="400">
    <Grid>
        <TextBox Name="UsernameBox"  HorizontalAlignment="Center" Height="40" Margin="0,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200" TextChanged="UsernameBox_TextChanged"/>
        <Button Content="Add User" HorizontalAlignment="Center" Height="40" Margin="0,170,0,0" VerticalAlignment="Top" Width="100" Click="AddUser_Click"/>

    </Grid>
</Window>
