<Window x:Class="MovieAppWPF.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieAppWPF"
        mc:Ignorable="d"
        Title="AddNewUser" Height="400" Width="600">
    <Grid>
        <Button Content="AddUser" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Center" Height="30" Width="100" Click="Button_Click"/>
        <TextBox Name="UserName" HorizontalAlignment="Center" Margin="0,0,0,70" MaxLength="20" Text="Username" VerticalAlignment="Center" Width="160" Height="40" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
